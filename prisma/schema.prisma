datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model Car {
  id           Int      @id @default(autoincrement())
  name         String
  brand        String
  price        Int
  mileage      String
  year         Int
  color        String
  description  String
  phone        String
  transmission String
  fuelType     String
  location     String
  engine       String
  images       String[]
  createdAt    DateTime @default(now())
}